<div class="container">
 <hr class="my-4">
  <h2 class="font-weight-lighter">All Enrollments,  including <%= current_user.username%>'s enrollments</h2>
   <%= link_to "Current User Records", user_path(@current_user) ,class: "btn btn- btn-warning text-white"%> |   

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Instrument Name</th>
        <th>Student's Name</th>
        <th>Billing Start Date</th>
        <th>Level</th>
        <th>Created By</th>
      </tr>
    </thead>
    
    <tbody>
        <% @enrollments.each do |enrollment| %>
            <tr>
              <td><%=enrollment.instrument.name %>
              <td><%=enrollment.student %></td>
              <td><%= enrollment.startdate %></td>
              <td><%= enrollment.level%></td>
              <td><%= enrollment.user.username%></td>
        <% end %>    
      </tr>
    </tbody>
</table><br>
<hr class="my-4">
</div>