<div class="container">
  <hr class="my-4">
  <h2 class="font-weight-lighter"><%= current_user.username %>'s Enrollments</h2>
  <br>        
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Instrument Name</th>
        <th>Student's Name</th>
        <th>Billing Start Date</th>
        <th>Level</th>
        <th>Duration in Weeks</th>
        <th>Price per week in USD</th>
      </tr>
    </thead>

    <tbody>
        <% @enrollments.each do |enrollment| %>
            <tr>
              <td><%=enrollment.instrument.name %>
              <td><%= link_to enrollment.student,enrollment %></td>
              <td><%= enrollment.startdate %></td>
              <td><%= enrollment.level%></td>
              <td><%= enrollment.duration%></td>
              <td><%= enrollment.price%></td>             
        <% end %>
    </tbody>
</table><br>

<%= link_to 'Add New Enrollment', new_enrollment_path, class: "btn btn-warning text-white" %><br><br>
<%= link_to 'Home', user_path(@current_user), class: "btn btn-warning text-white" %><br><br> 
<hr class="my-4">
</div>