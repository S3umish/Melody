
<div class="container">
 <hr class="my-4">
  <h2 class="font-weight-lighter">Most Expensive Enrollments</h2>
   <%#= link_to "View Your Enrollments", user_path(@current_user) ,class: "btn btn- btn-info text-white"%>   

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Student's Name</th> 
        <th>Price</th>
        <th>Create_at</th>
        <th>Created_by</th>
      </tr>
    </thead>
    
    <tbody>
        <% @enrollments.each do |enrollment| %>
            <tr>
              <td><%= enrollment.student%></td>
              <td><%= enrollment.price %></td>
              <td><%=enrollment.created_at.strftime("%A, %b %e, at %l:%M %p")%></td>
              <td><%= enrollment.user.username%></td>
        <% end %>    
      </tr>
    </tbody>
</table><br>
<hr class="my-4">
</div>
