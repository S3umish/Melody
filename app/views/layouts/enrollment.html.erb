    <% if flash[:message] %>
      <h3 style="color:green;"><%= flash[:message] %></h3>
     <% end %>

    <% if flash[:error] %>
      <h3 style="color:red;"><%= flash[:error] %></h3>
    <% end %>

    <%if logged_in?%>
      <h3 style="color:blue;">You are logged in as: <%= current_user.username%></h3>
    <% end %>
 
    <%= yield %>
